
<%= simple_form_for(@job) do |f| %>
  <%= f.error_notification %>
   <div class="form-group">
      <%= f.input :title %>
      <%= f.input :short_content %>
      <%= f.cktext_area :description %>
      <%= f.input :company %>
      <%= f.input :url %>
      <%= f.input :salary %>
    </div>
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
